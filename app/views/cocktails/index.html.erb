<div class="container">
  <h1 class="main-header">Our Cocktails</h1>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
         <%= link_to cocktail_path(cocktail) do %>
          <div class="card" style="background-image:linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_path cocktail.photo %>);">
<!--             <div class="card-category">Popular</div>
 -->            <div class="card-description">
              <h2><%= cocktail.name %></h2>
              <p>
                <%cocktail.stars.times do %>
                  <i class="fas fa-star"></i>
                <% end %>
                <%(5 - cocktail.stars).times do %>
                  <i class="far fa-star"></i>
                <% end %>
              </p>
            </div>
          </div>
         <% end %>
      </div>
    <% end %>
  </div>
</div>

